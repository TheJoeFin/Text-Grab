<ui:FluentWindow
    x:Class="Text_Grab.Controls.PostGrabActionEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Post-Grab Actions Settings"
    Width="900"
    Height="700"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <ui:ImageIcon x:Key="TextGrabIcon" Source="/Text-Grab;component/Images/TealSelect40.png" />

        <!--  Converter to convert enum to int for ComboBox SelectedIndex  -->
        <local:EnumToIntConverter x:Key="EnumToIntConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="Post-Grab Actions Settings"
            Grid.ColumnSpan="3"
            Height="32"
            Margin="2,2,2,0"
            Padding="8,2"
            Icon="{StaticResource TextGrabIcon}" />

        <!--  Available Actions (Left)  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="16,16,8,8">
            <TextBlock
                Margin="0,0,0,8"
                FontSize="18"
                FontWeight="SemiBold"
                Text="Available Actions" />
            <TextBlock
                x:Name="AvailableActionsHint"
                Margin="0,0,0,4"
                Opacity="0.7"
                Text="Actions that can be added to the enabled list"
                TextWrapping="Wrap" />
            <Border
                Background="{ui:ThemeResource CardBackgroundFillColorSecondaryBrush}"
                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <ui:ListView
                        x:Name="AvailableActionsListBox"
                        MinHeight="300"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="46" Header="Icon">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Viewbox Height="24">
                                                <ui:SymbolIcon FontSize="24" Symbol="{Binding Path=SymbolIcon, Mode=OneWay}" />
                                            </Viewbox>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Width="300"
                                    DisplayMemberBinding="{Binding ButtonText}"
                                    Header="Action Name" />
                            </GridView>
                        </ListView.View>
                    </ui:ListView>
                    <TextBlock
                        x:Name="NoAvailableActionsText"
                        Margin="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Opacity="0.6"
                        Text="All actions are currently enabled"
                        Visibility="Collapsed" />
                </Grid>
            </Border>
        </StackPanel>

        <!--  Move Buttons (Center)  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="8"
            VerticalAlignment="Center">
            <ui:Button
                x:Name="AddButton"
                Width="100"
                Margin="0,0,0,8"
                HorizontalAlignment="Center"
                Click="AddButton_Click"
                ToolTip="Add selected action to enabled list">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon FontSize="14" Symbol="ArrowRight16" />
                    <TextBlock Margin="4,0,0,0" Text="Add" />
                </StackPanel>
            </ui:Button>
            <ui:Button
                x:Name="RemoveButton"
                Width="100"
                Margin="0,0,0,8"
                HorizontalAlignment="Center"
                Click="RemoveButton_Click"
                ToolTip="Remove selected action from enabled list">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon FontSize="14" Symbol="ArrowLeft16" />
                    <TextBlock Margin="4,0,0,0" Text="Remove" />
                </StackPanel>
            </ui:Button>
            <Separator Margin="0,8" />
            <ui:Button
                x:Name="MoveUpButton"
                Width="100"
                Margin="0,0,0,8"
                HorizontalAlignment="Center"
                Click="MoveUpButton_Click"
                ToolTip="Move selected action up in order">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon FontSize="14" Symbol="ArrowUp16" />
                    <TextBlock Margin="4,0,0,0" Text="Up" />
                </StackPanel>
            </ui:Button>
            <ui:Button
                x:Name="MoveDownButton"
                Width="100"
                HorizontalAlignment="Center"
                Click="MoveDownButton_Click"
                ToolTip="Move selected action down in order">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon FontSize="14" Symbol="ArrowDown16" />
                    <TextBlock Margin="4,0,0,0" Text="Down" />
                </StackPanel>
            </ui:Button>
        </StackPanel>

        <!--  Enabled Actions (Right)  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="2"
            Margin="8,16,16,8">
            <TextBlock
                Margin="0,0,0,8"
                FontSize="18"
                FontWeight="SemiBold"
                Text="Enabled Actions" />
            <TextBlock
                Margin="0,0,0,4"
                Opacity="0.7"
                Text="Actions that will appear in the post-grab menu"
                TextWrapping="Wrap" />
            <Border
                Background="{ui:ThemeResource CardBackgroundFillColorSecondaryBrush}"
                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <ui:ListView
                    x:Name="EnabledActionsListBox"
                    MinHeight="300"
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="46" Header="Icon">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Viewbox Height="24">
                                            <ui:SymbolIcon FontSize="24" Symbol="{Binding Path=SymbolIcon, Mode=OneWay}" />
                                        </Viewbox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn
                                Width="180"
                                DisplayMemberBinding="{Binding ButtonText}"
                                Header="Action Name" />
                            <GridViewColumn Width="120" Header="Default">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Width="110" SelectedIndex="{Binding Path=DefaultCheckState, Mode=TwoWay, Converter={StaticResource EnumToIntConverter}}">
                                            <ComboBoxItem Content="Off" />
                                            <ComboBoxItem Content="Last Used" />
                                            <ComboBoxItem Content="On" />
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ui:ListView>
            </Border>
        </StackPanel>

        <!--  Bottom Buttons  -->
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="16,8"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ui:Button
                x:Name="ResetButton"
                Margin="0,0,8,0"
                Click="ResetButton_Click"
                Content="Reset to Defaults"
                ToolTip="Reset to default post-grab actions" />
            <ui:Button
                x:Name="SaveButton"
                Margin="0,0,8,0"
                Appearance="Primary"
                Click="SaveButton_Click"
                Content="Save"
                ToolTip="Save changes and close" />
            <ui:Button
                x:Name="CancelButton"
                Click="CancelButton_Click"
                Content="Cancel"
                ToolTip="Close without saving" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
