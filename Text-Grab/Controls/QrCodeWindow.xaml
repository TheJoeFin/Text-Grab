<ui:FluentWindow
    x:Class="Text_Grab.Controls.QrCodeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Text Grab QR Code"
    Width="400"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <BitmapImage x:Key="TextGrabIcon" UriSource="/Text-Grab;component/Images/TealSelect40.png" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="Edit Text"
            Height="32"
            Padding="8,2"
            Icon="{StaticResource TextGrabIcon}" />

        <local:CollapsibleButton
            x:Name="SaveButton"
            Grid.Row="1"
            ButtonText="Save Code"
            Click="SaveButton_Click"
            SymbolText="" />
        <TextBlock
            x:Name="LengthErrorTextBlock"
            Grid.Row="2"
            Padding="20,4"
            HorizontalAlignment="Center"
            d:Visibility="Visible"
            FontWeight="Bold"
            TextAlignment="Center"
            TextWrapping="Wrap"
            Visibility="Collapsed">
            ⚠️ The text has been trimmed to the maximum allowable length of QR Codes.
        </TextBlock>
        <Image
            Name="CodeImage"
            Grid.Row="3"
            Margin="0" />
    </Grid>
</ui:FluentWindow>
